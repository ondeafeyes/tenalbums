    <input type="email" id="email" name="email" required />

    <div class="entry">
      <span class="entry-label">Artist and Title #1</span>
      <input type="text" name="artist1" placeholder="Artist" required />
      <input type="text" name="title1" placeholder="Album Title" required />
    </div>

    <div class="entry">
      <span class="entry-label">Artist and Title #2</span>
      <input type="text" name="artist2" placeholder="Artist" required />
      <input type="text" name="title2" placeholder="Album Title" required />
    </div>

    <input type="submit" value="Submit" />
  </form>

  <div class="message success" id="successMessage">✅ Submitted successfully!</div>
  <div class="message error" id="errorMessage"⚠️ Something went wrong. Please try again.</div>

  <script>
    document.getElementById("recordForm").addEventListener("submit", async function (e) {
      e.preventDefault();

      const successMsg = document.getElementById("successMessage");
      const errorMsg = document.getElementById("errorMessage");
      successMsg.style.display = "none";
      errorMsg.style.display = "none";

      const form = e.target;
      const formData = new FormData(form);

      try {
        const response = await fetch("https://script.google.com/macros/s/AKfycbzgZ5KvjjQUmz7Si2TmKz0VxOFsOVZd0_olZ1x28sANHFZgEnDiVjv4z32wIqXzw1ufmw/exec", {
          method: "POST",
          body: formData
        });

        if (response.ok) {
          successMsg.style.display = "block";
          form.reset(); // clear the form
        } else {
          errorMsg.style.display = "block";
        }
      } catch (err) {
        console.error(err);
        errorMsg.style.display = "block";
      }
    });
  </script>

</body>
